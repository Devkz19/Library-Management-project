<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- QWeb Template for Issued Users of a Book -->
   <template id="report_book_issued_users_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="book">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center; background:#3f51b5; color:white; padding:10px;">
              Issued Users Report for "<t t-esc="book.name" />"
            </h2>
            <br/>
            <table style="width:100%; border:1px solid #ccc;" class="table table-sm table-bordered">
              <thead style="background:#eee;">
                <tr>
                  <th>Member Name</th>
                  <th>Email</th>
                  <th>Issue Date</th>
                  <th>Return Date</th>
                </tr>
              </thead>
              <tbody>
                <t t-foreach="book.issue_ids.filtered(lambda i: i.issue_type == 'issue')" t-as="issue">
                  <tr>
                    <td><t t-esc="issue.member_id.name"/></td>
                    <td><t t-esc="issue.member_id.email"/></td>
                    <td><t t-esc="issue.issue_date"/></td>
                    <td><t t-esc="issue.return_date"/></td>
                  </tr>
                </t>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </t>
  </template>

    <!-- Report Action -->

 <record id="action_report_book_issued_users" model="ir.actions.report">
  <field name="name">Issued Users Report</field>
  <field name="model">library.book</field>
  <field name="report_type">qweb-pdf</field>
  <field name="report_name">library_management.report_book_issued_users_template</field>
  <field name="report_file">library_management.report_book_issued_users_template</field>
  <field name="print_report_name">'Issued Users - %s' % (object.name)</field>
</record>



  </data>
</odoo>
