<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_library_issue_return_wizard_form" model="ir.ui.view">
    <field name="name">library.issue.return.wizard.form</field>
    <field name="model">library.issue.return.wizard</field>
    <field name="arch" type="xml">
      <form string="Return Book">
        <group>
          <field name="return_date"/>
          <field name="extra_days" readonly="1"/>
          <field name="penalty_amount" readonly="1"/>
        </group>
        <footer>
          <button string="Confirm Return" type="object" name="confirm_return" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_library_issue_return_wizard" model="ir.actions.act_window">
    <field name="name">Return Book</field>
    <field name="res_model">library.issue.return.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_issue_id': active_id}</field>
  </record>
</odoo>
