<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_library_member_welcome" model="mail.template">
        <field name="name">Library Member Welcome Email</field>
        <field name="model_id" ref="library_management.model_library_member"/>
        <field name="subject">Welcome to the Library, {{ object.name }}!</field>
        <field name="email_to">{{ object.email }}</field>
        <field name="email_from">{{ user.email or 'noreply@library.com' }}</field>
        <field name="description">Email sent to a new member upon registration</field>
        <field name="body_html" type="html">
            <div style="font-family: Arial, sans-serif; font-size: 14px; color: #333;">
                <p>Dear <strong><t t-out="object.name or 'Member'"/></strong>,</p>

                <p>
                    Thank you for becoming a member of our library.
                </p>

                <p>
                    Your Membership ID is: <strong><t t-out="object.membership_id or 'N/A'"/></strong>
                </p>

                <p>
                    We look forward to supporting your reading journey!
                </p>

                <p>
                    Best regards,<br/>
                    <strong><t t-out="user.company_id.name or 'Library Team'"/></strong>
                </p>
            </div>
        </field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>
